
@{
    ViewBag.Title = "Display";
}

<body background="~/export-map-share.png" style="background-size:100% 100%; background-attachment:fixed">
    <canvas id="myCanvas" style="border:1px;">
        <script>
            var can = document.getElementById("myCanvas")
            var ctx = can.getContext("2d")
            ctx.beginPath();
            // get x cordinate location
            var lonNormal = ( @ViewBag.lon + 180) * (window.innerWidth / 360);
            var latNormal = (@ViewBag.lat + 90) * (window.innerHeight / 180);
            console.log(@ViewBag.lon + "," + @ViewBag.lat);

            var xLocation = lonNormal + 600
            var yLocation = latNormal + 600

            console.log(xLocation + "," + yLocation);

            // get y cordinate location

            ctx.arc(300, 275,1000, 0, Math.PI * 2); // Draw a point using the arc function of the canvas with a point structure.
            ctx.fillStyle = "Red";
            ctx.fill(); // Close the path and fill.
            cx.stroke();

        </script>
    </canvas>
</body>

